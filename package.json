{
    "name": "gropius-frontend",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "preview": "vite preview",
        "lint": "eslint . --fix --ignore-path .gitignore",
        "codegen": "graphql-codegen --config codegen.yaml",
        "format": "prettier --write \"**/*.{ts,json,js,tsx,jsx,vue}\""
    },
    "dependencies": {
        "@bytemd/plugin-gfm": "^1.21.0",
        "@bytemd/vue-next": "^1.21.0",
        "@fontsource/roboto": "^5.0.13",
        "@github/relative-time-element": "^4.4.0",
        "@github/task-lists-element": "^2.0.5",
        "@graphiql/plugin-explorer": "^3.0.1",
        "@gropius/graph-editor": "^0.0.1",
        "@material/material-color-utilities": "^0.2.7",
        "@mdi/font": "7.4.47",
        "@vee-validate/yup": "^4.12.8",
        "@vueuse/core": "^10.10.0",
        "async-mutex": "^0.5.0",
        "axios": "^1.7.2",
        "codemirror": "^5.65.16",
        "core-js": "^3.37.1",
        "github-markdown-css": "^5.5.1",
        "graphiql": "^3.2.2",
        "graphql": "^16.8.1",
        "graphql-request": "^6.1.0",
        "jtd": "^0.1.1",
        "jwt-decode": "^4.0.0",
        "mitt": "^3.0.1",
        "pinia": "^2.1.7",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "reflect-metadata": "^0.2.2",
        "remark": "^15.0.1",
        "sprotty": "^1.2.0",
        "strip-markdown": "^6.0.0",
        "uuid": "^9.0.1",
        "vee-validate": "^4.12.8",
        "vue": "3.4.27",
        "vue-router": "^4.3.2",
        "vuetify": "^3.6.8",
        "webfontloader": "^1.6.28",
        "yup": "^1.4.0"
    },
    "devDependencies": {
        "@babel/types": "^7.24.6",
        "@graphql-codegen/cli": "^5.0.2",
        "@graphql-codegen/typescript": "^4.0.7",
        "@graphql-codegen/typescript-document-nodes": "^4.0.7",
        "@graphql-codegen/typescript-graphql-request": "^6.2.0",
        "@graphql-codegen/typescript-operations": "^4.2.1",
        "@types/node": "^20.12.13",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^9.0.8",
        "@types/webfontloader": "^1.6.38",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/eslint-config-typescript": "^13.0.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-vue": "^9.26.0",
        "prettier": "^3.2.5",
        "sass": "^1.77.2",
        "typescript": "^5.4.5",
        "unplugin-fonts": "^1.1.1",
        "vite": "^5.2.12",
        "vite-plugin-vuetify": "^2.0.3",
        "vue-tsc": "^2.0.19"
    },
    "workspaces": [
        "packages/*"
    ],
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "printWidth": 120
    },
    "eslintConfig": {
        "env": {
            "node": true
        },
        "root": true,
        "parser": "vue-eslint-parser",
        "parserOptions": {
            "parser": "@typescript-eslint/parser"
        },
        "extends": [
            "plugin:vue/vue3-recommended",
            "prettier",
            "eslint:recommended",
            "@vue/typescript/recommended"
        ],
        "plugins": [
            "@typescript-eslint",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": "error",
            "vue/no-mutating-props": "warn"
        }
    }
}
